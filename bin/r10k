#!/usr/bin/env ruby

require 'r10k/cli'
require 'colored'

begin
  R10K::CLI.command.run(ARGV)
rescue Interrupt
  $stderr.puts "#{File.basename($PROGRAM_NAME)} Aborted!".red
  exit(1)
rescue SystemExit => e
  exit(e.status)
rescue Exception => e
  $stderr.puts "\nError running #{File.basename($PROGRAM_NAME)}: #{e.inspect}".red
  $stderr.puts e.backtrace.join("\n").red if ARGV.include? '--trace'
  exit(1)
end
